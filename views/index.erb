
<h2>Available Links</h2>
<ul class="links">
<% @links.each do |link| %>
  <li>
    <a href="/t/<%= link.short_url %>">t/<%= link.short_url %></a>
    <span>number of visits:<%= link.visits %></span>
    <span><%= link.description %></span>
  </li>
<% end %>
</ul>

