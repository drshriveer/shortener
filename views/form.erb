<form id='myForm'>
    <h3>Paste URL here:</h3> <input type='text' name="url">
    <h3>Description: </h3> <input type='text' name="description">
    <input type="submit" value="Shorten">
</form>
<div id="shortcode"></div>

<br/>
<div>
<a href="<%= url('/') %>">&larr; See all</a>
</div>

<script type="text/javascript">
  $(function() {
    $('#myForm').submit(function() {
    $.post('/new', $("#myForm").serialize(), function(data){
      var $url = $('<a>', {href: data}).append(data);
      var $shortcode = $('<div>').append("Your Code:").append($url);
      $('#shortcode').append($shortcode.hide().fadeIn());
      });
    return false;
    });
  });
</script>
